<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>mapping_exceptions_winfix</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>FHIR Core Specification Mapping Exceptions fixer</Title>
    <Authors>brian_pos</Authors>
    <Company>Brian Postlethwaite</Company>
    <PackageProjectUrl>https://github.com/brianpos/fhir-mapping-exceptions-winfix</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/brianpos/fhir-mapping-exceptions-winfix</RepositoryUrl>
    <PackAsTool>True</PackAsTool>
    <Version>1.1.0</Version>
    <AssemblyVersion>0.2.0.0</AssemblyVersion>
    <FileVersion>0.2.0.0</FileVersion>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <ToolCommandName>fhir-mapping-exceptions-winfix</ToolCommandName>
    <PackageId>fhir-mapping-exceptions-winfix</PackageId>
    <Description>A small utility for contributors to help manage the FHIR core specification source `*.mapping-exceptions.xml` files</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="LibGit2Sharp" Version="0.30.0" />
  </ItemGroup>
</Project>
